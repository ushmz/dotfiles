{
    // Reflect .vimrc for vim key binding
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "~/.vimrc",

    "debug.inlineValues": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnSessionStart",

    // Editor settings
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        72,
        79,
        120
    ],
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
        "comments": false,
        "strings": false,
        "other": true
    },

    // Suppress confirm popup when drag-and-drop to file explorer
    "explorer.confirmDragAndDrop": false,
    // Naming rule on file named is duplicated
    "explorer.incrementalNaming": "smart",

    // Auto save all files several seconds after focusing out (or stopping cursor)
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Language specific settings
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[dart]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.formatOnSave": true
    },
    "[shell]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[java]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    // [TODO] Trust external files
    "security.workspace.trust.untrustedFiles": "open",

    // Suppress new version notification
    "vsicons.dontShowNewVersionMessage": true,

    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    // VSCode appearance settings
    "editor.fontFamily": "'Hack Nerd Font', 'Source Code Pro', 'monospace'",
    "workbench.colorTheme": "Hybrid",
    "workbench.iconTheme": "vscode-icons",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.preferredDarkColorTheme": "Hybrid",
    "workbench.preferredLightColorTheme": "Hybrid",
    "workbench.colorCustomizations": {
        "[Iceberg]": {
            // Improve selection BG color
            "editor.selectionBackground": "#666B8AFF",
            "editor.selectionHighlightBackground": "#43465CFF"
        },
        "[Hybrid]": {
            // Improve colors
            "statusBar.background": "#333333FF",
            "editorCursor.background": "#333333FF",
            "editorCursor.foreground": "#CCCCCCFF",
            "editorLineNumber.activeForeground": "#777777FF",
            "editorLineNumber.foreground": "#CCCCCCFF"
        }
    },

    // Go settings
    "go.formatTool": "goimports",
    "go.docsTool": "godoc",

    // Used if no python path specified in workspace setting
    "python.defaultInterpreterPath": "/Users/ushmz/.asdf/shims/python",

    // Typescript settings
    // Auto fix import on file moved or name changed
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "project-relative",
}
