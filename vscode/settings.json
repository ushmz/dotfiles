{
  "vim.autoindent": true,
  "vim.debug.silent": true,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.statusBarColorControl": false,
  "vim.surround": true,
  "vim.timeout": 1200,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.visualstar": true,

  "vim.insertModeKeyBindings": [
    { "before": ["j", "j"], "after": ["<Esc>"] },
    { "before": "<C-r>", "after": ["<C-r", "<C-p>"] }
  ],
  "vim.normalModeKeyBindings": [
    { "before": ["G"], "after": ["G", "z", "z"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["}"], "after": ["}", "z", "z"] },
    { "before": ["{"], "after": ["{", "z", "z"] },
    { "before": ["*"], "after": ["*", "z", "z"] },
    { "before": ["#"], "after": ["#", "z", "z"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": [";"], "after": [":"] },
    { "before": ["K"], "commands": ["editor.action.showHover"] },
    { "before": [">"], "commands": ["editor.action.indentLines"] },
    { "before": ["<"], "commands": ["editor.action.outdentLines"] },
    { "before": ["g", "]"], "after": ["g", "t"] },
    { "before": ["g", "["], "after": ["g", "T"] },
    {
      "before": ["g", "r"],
      "commands": [{ "command": "editor.action.goToReferences" }]
    },
    {
      "before": ["g", "i"],
      "commands": [{ "command": "editor.action.goToImplementation" }]
    },
    {
      "before": ["g", "d"],
      "commands": [{ "command": "editor.action.revealDefinition" }]
    },
    {
      "before": ["g", "t"],
      "commands": [{ "command": "editor.action.goToTypeDefinition" }]
    },
    {
      "before": ["g", "s"],
      "commands": [{ "command": "editor.action.goToSymbol" }]
    },
    {
      "before": ["g", "n"],
      "commands": [{ "command": "editor.action.marker.nextInFiles" }]
    },
    {
      "before": ["g", "N"],
      "commands": [{ "command": "editor.action.marker.prevInFiles" }]
    },
    { "before": ["<Esc>", "<Esc>"], "commands": [":nohlsearch"] },
    { "before": ["<leader>", "o"], "after": ["o", "<Esc>"] },
    { "before": ["<leader>", "O"], "after": ["O", "<Esc>"] },
    {
      "before": ["<leader>", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": ["workbench.action.files.save"]
    },
    { "before": ["<leader>", "s"], "commands": [":split"] },
    { "before": ["<leader>", "v"], "commands": [":vsplit"] },
    {
      "before": ["<leader>", "c"],
      "commands": [{ "command": "editor.action.commentLine" }]
    },
    {
      "before": ["<leader>", "f"],
      "commands": [{ "command": "editor.action.quickFix" }]
    },
    {
      "before": ["<leader>", "r", "n"],
      "commands": [{ "command": "editor.action.rename" }]
    },
    {
      "before": ["<C-k>"],
      "commands": [{ "command": "editor.action.insertCursorAbove" }]
    },
    {
      "before": ["<C-j>"],
      "commands": [{ "command": "editor.action.insertCursorBelow" }]
    }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<leader>", "c"],
      "commands": [{ "command": "editor.action.commentLine" }]
    }
  ],

  "debug.inlineValues": true,
  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "openOnSessionStart",

  // Editor settings
  "editor.accessibilitySupport": "off",
  "editor.copyWithSyntaxHighlighting": false,
  "editor.dragAndDrop": false,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": true,
  "editor.rulers": [72, 79, 120],
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "comments": true,
    "strings": true,
    "other": true
  },

  // Suppress confirm popup when drag-and-drop to file explorer
  "explorer.confirmDragAndDrop": false,
  // Naming rule on file named is duplicated
  "explorer.incrementalNaming": "smart",

  // Auto save all files several seconds after focusing out (or stopping cursor)
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.DS_Store": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp/cache": true
  },

  // Language specific settings

  "go.docsTool": "godoc",
  "go.formatTool": "gofmt",
  "go.lintOnSave": "package",
  "go.lintTool": "golangci-lint",
  "go.useLanguageServer": true,
  "gopls": {
    "ui.completion.usePlaceholders": false
  },
  "[go]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "[go.mod]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    },
    "editor.formatOnPaste": false,
    "editor.formatOnSave": false
  },
  // Used if no python path specified in workspace setting
  "python.defaultInterpreterPath": "/Users/ushmz/.asdf/shims/python",
  "[python]": {
    "editor.insertSpaces": false,
    "editor.tabSize": 4
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "project-relative",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.formatOnSave": false,
    "editor.tabSize": 2
  },
  "[dart]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "[rust]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[markdown]": {
    "editor.formatOnSave": true
  },
  "[shell]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },
  "[java]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 4
  },

  "markdown.preview.breaks": true,

  // [TODO] Trust external files
  "security.workspace.trust.untrustedFiles": "open",

  // Suppress new version notification
  "vsicons.dontShowNewVersionMessage": true,

  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter.notebook.ipynb"
  },

  // VSCode appearance settings
  "editor.fontFamily": "'Hack Nerd Font', 'Source Code Pro', 'monospace'",
  "explorer.openEditors.visible": 0,
  "workbench.editor.labelFormat": "short",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.showIcons": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabCloseButton": "left",
  "workbench.startupEditor": "none",
  "workbench.editor.openPositioning": "last",
  "workbench.colorTheme": "Hybrid",
  "workbench.iconTheme": "vscode-icons",
  "workbench.preferredDarkColorTheme": "Hybrid",
  "workbench.preferredLightColorTheme": "Hybrid",
  "workbench.colorCustomizations": {
    "terminal.background": "#212224FF",
    "terminal.foreground": "#D9D8D8",
    "terminalCursor.background": "#D9D8D8",
    "terminalCursor.foreground": "#D9D8D8",
    "terminal.ansiBrightBlack": "#35383B",
    "terminal.ansiBrightBlue": "#7693AC",
    "terminal.ansiBrightCyan": "#749E99",
    "terminal.ansiBrightGreen": "#769972",
    "terminal.ansiBrightMagenta": "#977BA0",
    "terminal.ansiBrightRed": "#B05655",
    "terminal.ansiBrightWhite": "#848B92",
    "terminal.ansiBrightYellow": "#E1A574",
    "terminal.ansiBlack": "#35383B",
    "terminal.ansiBlue": "#7693AC",
    "terminal.ansiCyan": "#749E99",
    "terminal.ansiGreen": "#769972",
    "terminal.ansiMagenta": "#977BA0",
    "terminal.ansiRed": "#B05655",
    "terminal.ansiWhite": "#848B92",
    "terminal.ansiYellow": "#E1A574",
    "[Iceberg]": {
      // Improve selection BG color
      "editor.selectionBackground": "#666B8AFF",
      "editor.selectionHighlightBackground": "#43465CFF"
    },
    "[Hybrid]": {
      // Improve colors
      "statusBar.background": "#333333FF",
      "editorCursor.background": "#333333FF",
      "editorCursor.foreground": "#CCCCCCFF",
      "editorLineNumber.activeForeground": "#777777FF",
      "editorLineNumber.foreground": "#CCCCCCFF"
    }
  },

  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "go.toolsManagement.autoUpdate": true
}
