{
    "vim.autoindent": true,
    "vim.debug.silent": true,
    "vim.hlsearch": true,
    "vim.leader": "<space>",
    "vim.statusBarColorControl": false,
    "vim.surround": true,
    "vim.timeout": 1200,
    "vim.useCtrlKeys": true,
    "vim.useSystemClipboard": true,
    "vim.visualstar": true,

    "vim.insertModeKeyBindings": [
        { "before": [ "j", "j" ], "after": [ "<Esc>" ] },
        { "before": "<C-p>", "after": "<Up>" },
        { "before": "<C-n>", "after": "<Down>" },
        { "before": "<C-b>", "after": "<Left>" },
        { "before": "<C-f>", "after": "<Right>" },
        // { "before": "<C-a>", "after": "<C-o>:call <SID>home()<CR>" },
        { "before": "<C-e>", "after": "<End>" },
        // { "before": "<C-d>", "after": "<Del>" },
        { "before": "<C-h>", "after": "<BS>" },
    ],
    "vim.normalModeKeyBindings": [
        { "before": [ "G" ], "after": [ "G", "z", "z" ] },
        { "before": [ "n" ], "after": [ "n", "z", "z" ] },
        { "before": [ "N" ], "after": [ "N", "z", "z" ] },
        { "before": [ "}" ], "after": [ "}", "z", "z" ] },
        { "before": [ "{" ], "after": [ "{", "z", "z" ] },
        { "before": [ "<C-d>" ], "after": [ "<C-d>", "z", "z" ] },
        { "before": [ "<C-u>" ], "after": [ "<C-u>", "z", "z" ] },
        { "before": [ "*" ], "after": [ "*", "z", "z" ] },
        { "before": [ "#" ], "after": [ "#", "z", "z" ] },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        { "before": [ ";" ], "after": [ ":" ] },
        { "before": [ "H" ], "after": [ "0" ] },
        { "before": [ "L" ], "after": [ "$" ] },
        { "before": [ ">" ], "commands": [ "editor.action.indentLines" ] },
        { "before": [ "<" ], "commands": [ "editor.action.outdentLines" ] },
        { "before": [ "g", "]" ], "after": [ "g", "t" ] },
        { "before": [ "g", "[" ], "after": [ "g", "T" ] },
        { "before": ["<Esc>", "<Esc>"], "commands": [":nohlsearch"]},
        { "before": [ "<leader>", "q" ], "commands": [ ":q" ] },
        { "before": [ "<leader>", "s" ], "commands": [ ":split" ] },
        { "before": [ "<leader>", "v" ], "commands": [ ":vsplit" ] },
        { "before": [ "<leader>", "o" ], "after": [ "o", "<Esc>" ] },
        { "before": [ "<leader>", "O" ], "after": [ "O", "<Esc>" ] },
        { "before": [ "<leader>", "c" ], "commands": [ { "command": "editor.action.commentLine" } ] },
        // Surround
        // { "before": [ "s" ], "after": [ "y", "s" ] },
        //Multi-Cursor Mode
        //prefix Ctrl
        { "before": [ "<C-n>", ], "after": [ "g", "b" ] },
        { "before": [ "<C-k>", ], "commands": [ { "command": "editor.action.insertCursorAbove" } ] },
        { "before": [ "<C-j>", ], "commands": [ { "command": "editor.action.insertCursorBelow" } ] },
    ],

    "debug.inlineValues": true,
    "debug.internalConsoleOptions": "openOnSessionStart",
    "debug.openDebug": "openOnSessionStart",

    // Editor settings
    "editor.accessibilitySupport": "off",
    "editor.copyWithSyntaxHighlighting": false,
    "editor.dragAndDrop": false,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.renderControlCharacters": true,
    "editor.rulers": [
        72,
        79,
        120
    ],
    "editor.suggestSelection": "first",
    "editor.quickSuggestions": {
        "comments": false,
        "strings": false,
        "other": true
    },

    // Suppress confirm popup when drag-and-drop to file explorer
    "explorer.confirmDragAndDrop": false,
    // Naming rule on file named is duplicated
    "explorer.incrementalNaming": "smart",

    // Auto save all files several seconds after focusing out (or stopping cursor)
    "files.autoSave": "afterDelay",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.exclude": {
        "**/.DS_Store": true
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
    },

    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp/cache": true,
    },

    // Language specific settings
    "[go]": {
        "editor.codeActionsOnSave": {
            "source.organizeImports": true
        },
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[python]": {
        "editor.insertSpaces": false,
        "editor.tabSize": 4
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[dart]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[rust]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[markdown]": {
        "editor.formatOnSave": true
    },
    "[shell]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },
    "[java]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
    },

    "markdown.preview.breaks": true,

    // [TODO] Trust external files
    "security.workspace.trust.untrustedFiles": "open",

    // Suppress new version notification
    "vsicons.dontShowNewVersionMessage": true,

   "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },

    // VSCode appearance settings
    "editor.fontFamily": "'Hack Nerd Font', 'Source Code Pro', 'monospace'",
    "explorer.openEditors.visible": 0,
    "workbench.editor.labelFormat": "short",
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.showIcons": true,
    "workbench.editor.highlightModifiedTabs": true,
    "workbench.editor.tabCloseButton": "left",
    "workbench.startupEditor": "none",
    "workbench.editor.openPositioning": "last",
    "workbench.colorTheme": "Hybrid",
    "workbench.iconTheme": "vscode-icons",
    "workbench.preferredDarkColorTheme": "Hybrid",
    "workbench.preferredLightColorTheme": "Hybrid",
    "workbench.colorCustomizations": {
        "[Iceberg]": {
            // Improve selection BG color
            "editor.selectionBackground": "#666B8AFF",
            "editor.selectionHighlightBackground": "#43465CFF"
        },
        "[Hybrid]": {
            // Improve colors
            "statusBar.background": "#333333FF",
            "editorCursor.background": "#333333FF",
            "editorCursor.foreground": "#CCCCCCFF",
            "editorLineNumber.activeForeground": "#777777FF",
            "editorLineNumber.foreground": "#CCCCCCFF"
        }
    },

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    // Go settings
    "go.formatTool": "goimports",
    "go.docsTool": "godoc",

    // Used if no python path specified in workspace setting
    "python.defaultInterpreterPath": "/Users/ushmz/.asdf/shims/python",

    // Typescript settings
    // Auto fix import on file moved or name changed
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.importModuleSpecifier": "project-relative",
}
